<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.FavoriteActivity">
    <ListView
        android:layout_margin="10dp"

        android:id="@+id/lv_reciepe_fav"
android:layout_above="@id/btn_backtohome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/tv_no"
        android:visibility="gone"
        android:layout_marginTop="100dp"
        android:text="No Favourites Selected"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/rect_btn"
        android:textColor="#ffffff"
        android:text="Back To Home"
        android:padding="5dp"
        android:id="@+id/btn_backtohome"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

    </Button>
</RelativeLayout>